{
  "kind": "collectionType",
  "collectionName": "galleries",
  "info": {
    "singularName": "gallery",
    "pluralName": "galleries",
    "displayName": "Gallery",
    "description": "Gallery images for Campo Maiten website showcasing landscape, activities, architecture, and nature"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "landscape",
        "activities",
        "architecture",
        "nature"
      ],
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "altText": {
      "type": "string"
    }
  }
}
